<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY EXPENSE TRACKER"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_marginStart="200dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="yyyy_mm_dd"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/pickDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pick date"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginStart="200dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:hint="name of item or_service"
            android:inputType="text"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginStart="200dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="expense_description"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount"
            android:layout_marginStart="200dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="input_amount_in_peso"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:layout_marginStart="200dp"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="405dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:text="add expense"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:onClick="submitExpense"/>

        <Button
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:text="view expenses list"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:onClick="viewExpenses" />


    </LinearLayout>

</ScrollView>